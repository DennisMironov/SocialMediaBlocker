{
	"manifest_version": 3,
	"name": "Social Media Blocker",
	"description": "Block access to popular social media sites during specified hours.",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"declarativeNetRequest",
		"webNavigation",
		"activeTab",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"*://*.facebook.com/*",
		"*://*.twitter.com/*",
		"*://*.instagram.com/*"
	],
	"background": {
		"service_worker": "background.js"
	}
}